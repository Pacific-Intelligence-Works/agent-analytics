# Database (Postgres — auto-populated when linked to Vercel/Neon)
POSTGRES_URL=

# NextAuth.js
NEXTAUTH_SECRET=      # Generate with: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000

# Resend (transactional email for magic links)
RESEND_API_KEY=

# Email sender address and optional BCC
EMAIL_FROM="Agent Analytics <noreply@yourdomain.com>"
ADMIN_BCC_EMAIL=      # Optional — if set, all auth/invite emails will BCC this address

# Encryption key for Cloudflare API tokens (64-char hex = 256 bits)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# Vercel cron authorization
CRON_SECRET=

# PostHog analytics (optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
